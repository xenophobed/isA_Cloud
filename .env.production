# Production Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
ECS_CLUSTER=isa-platform-cluster-production
AWS_ACCOUNT_ID=123456789012

# Database (Supabase)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_KEY=your-production-service-role-key

# Redis
REDIS_URL=redis://isa-platform-redis-production.cache.amazonaws.com:6379

# JWT Configuration
JWT_SECRET=production-jwt-secret-key-change-this
JWT_EXPIRATION=8h
JWT_ISSUER=isa-cloud-gateway

# Service URLs (Internal ECS)
USER_SERVICE_URL=http://isa-account-service.isa-platform-cluster-production:8201
AUTH_SERVICE_URL=http://isa-auth-service.isa-platform-cluster-production:8202
MCP_SERVICE_URL=http://isa-mcp.isa-platform-cluster-production:8081
MODEL_SERVICE_URL=http://isa-model.isa-platform-cluster-production:8082
AGENT_SERVICE_URL=http://isa-agent.isa-platform-cluster-production:8083

# Blockchain Configuration (Disabled in production)
BLOCKCHAIN_ENABLED=false

# External Blockchain APIs (if needed)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_RPS=1000
RATE_LIMIT_BURST=2000

# CORS (Production domains only)
CORS_ALLOWED_ORIGINS=https://your-production-domain.com,https://app.your-domain.com